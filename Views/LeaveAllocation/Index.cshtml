@model Leave_Management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table id="tblData" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
           
                    <td>
                        @*@Html.ActionLink("Allocate to Employees", "SetLeave", new { id=item.Id } ) |*@
                        <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                            <i class="fa fa-pencil"></i>Allocate to Employees
                        </a>
                    </td>
                </tr>
         }
    </tbody>
</table>
